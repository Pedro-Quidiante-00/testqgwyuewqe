---
import Layout from '../layouts/Layout.astro';
import HeroSubPaginaComponent from '../components/ui/HeroSubPaginasComponent.astro'
import TarjetasDocuComponent from '../components/documentacion/TarjetasDocuComponent.astro';

const documentosLDC = [
    {
        href: "../assets/docs/PDF.pdf",
        titulo: "Reglamento Interno y de Convivencia Escolar (R.I.C.E) 2025"
    },
    {
        href: "../assets/docs/PDF.pdf",
        titulo: "Reglamento de Evaluación, Calificación y Promoción Escolar 2025"
    },
    {
        href: "../assets/docs/PDF.pdf",
        titulo: "Plan de Sexualidad, Afectividad y de Género Año 2025"
    },
    {
        href: "../assets/docs/PDF.pdf",
        titulo: "Plan de Formación Ciudadana Liceo de Cultura y Difusión Artística 2025"
    },
    {
        href: "../assets/docs/PDF.pdf",
        titulo: "Plan Integral de Seguridad Escolar (P.I.S.E) Año 2025"
    },
    {
        href: "../assets/docs/PDF.pdf",
        titulo: "Proyecto Educativo Institucional P.E.I Periodo 2024"
    },
    {
        href: "../assets/docs/PDF.pdf",
        titulo: "Plan de Formación para el Desarrollo Profesional Docente 2025"
    },
    {
        href: "../assets/docs/PDF.pdf",
        titulo: "Plan de Gestión de la Convivencia Escolar Año 2025"
    }
];
const calendarios = [
    { href: "../assets/docs/PDF.pdf", titulo: "Calendario de Evaluación Periodo 2025 Enseñanza Básica 1° Ciclo" },
    { href: "../assets/docs/PDF.pdf", titulo: "Calendario de Evaluación Periodo 2025 Enseñanza Básica 2° Ciclo" },
    { href: "../assets/docs/PDF.pdf", titulo: "Calendario de Evaluación Periodo 2025 Enseñanza Media" }
];
---
<Layout>
    <HeroSubPaginaComponent titulo="Documentación LDC 2025" subtitulo="En esta página, nuestra comunidad podrá acceder a toda la documentación relacionada con nuestra institución"/>
    <section class="py-12">
        <div class="max-w-6xl mx-auto px-6">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">DOCUMENTACIÓN LDC 2025</h2>
            <div class="grid md:grid-cols-2 gap-6">
                {documentosLDC.map(doc => (
                        <TarjetasDocuComponent
                                href={doc.href}
                                titulo={doc.titulo}/>
                ))}
            </div>
        </div>
    </section>
    <section class="py-12">
        <div class="max-w-6xl mx-auto px-6 py-10 bg-white rounded-lg">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">CALENDARIO DE EVALUACIONES 2025</h2>
            <p class="text-gray-700 mb-8 text-lg">Adjuntamos a nuestra comunidad, acceso al calendario de evaluaciones</p>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {calendarios.map(cal => (
                        <TarjetasDocuComponent
                                href={cal.href}
                                titulo={cal.titulo}/>
                ))}
            </div>
        </div>
    </section>
</Layout>