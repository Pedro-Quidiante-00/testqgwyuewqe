import TarjetasInfraComponent from '../components/infraestructura/TarjetasInfraComponent.astro';
import DescCampusComponent from '../components/infraestructura/DescCampusComponent.astro';
---
<Layout>
    <HeroSubPaginaComponent titulo="Nuestra Infraestructura" subtitulo="Espacios diseñados para potenciar el talento y la creatividad de nuestros estudiantes."/>
