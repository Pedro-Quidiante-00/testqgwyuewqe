<Layout>
    <HeroSubPaginaComponent titulo="Malla Curricular" subtitulo="Un viaje educativo desde la exploración inicial en básica hasta la especialización artística en media."/>

    <section class="py-16">
        <div class="max-w-6xl mx-auto px-6">
            <MallaBotonesComponent/>
            <MallaBasicaComponent ciclos={ciclosBasica} />
            <MallaMediaComponent ciclos={ciclosMedia} />
        </div>
    </section>

    <script is:inline>
        // Hace que lo primero que se muestre sea la malla de basica
        document.addEventListener('DOMContentLoaded', () => {
            mostrarSeccion('basica');
        });
        function mostrarSeccion(seccionId) {
            //Oculta contenido anterior
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.add('hidden');
            });
            //Desactiva el estilo de botones
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('border-red-600', 'text-red-700');
                btn.classList.add('border-transparent', 'text-gray-500');
            });
            //Muestra el contenido
            const contenido = document.getElementById(`contenido-${seccionId}`);
            if (contenido) {
                contenido.classList.remove('hidden');
            }
            // Activa el boton
            const boton = document.getElementById(`btn-${seccionId}`);
            if (boton) {
                boton.classList.remove('border-transparent', 'text-gray-500');
                boton.classList.add('border-red-600', 'text-red-700');
            }
        }
    </script>
</Layout>