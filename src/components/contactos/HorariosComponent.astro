---
type Horario = {
    dia: string
    hora: string
}
interface Props {
    titulo: string
    horarios: Horario[]
}
const { titulo, horarios } = Astro.props
---
<section class="bg-white p-7 rounded-lg shadow-md">
    <h3 class="text-2xl font-semibold text-gray-900 mb-5">{titulo}</h3>
    <div class="space-y-2">
        {horarios.map((horario) => (
                <div class="flex justify-between items-center p-2 bg-gray-100 rounded-md">
                    <span class="font-medium text-gray-800">{horario.dia}</span>
                    <span class="text-gray-700">{horario.hora}</span>
                </div>
        ))}
    </div>
</section>
