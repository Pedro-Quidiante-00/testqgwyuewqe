---
interface Props {
    titulo: string,
    texto: string,
    enlace: string,
}
const {titulo, texto, enlace} = Astro.props;
---
<section class="bg-white p-8 rounded-xl shadow-lg z-30">
    <h3 class="text-2xl font-bold text-gray-900 mb-4">{titulo}</h3>
    <div class="aspect-video rounded-lg overflow-hidden mb-4">
        <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d509.57259114492217!2d-73.7741798078417!3d-42.4810416489676!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x962219f3898dd505%3A0xe6028d1abbd04b26!2sESCUELA%20DE%20LA%20CULTURA%20(MOMENTANEA)!5e1!3m2!1ses!2scl!4v1758575439772!5m2!1ses!2scl"
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    </div>
    <p class="text-gray-600 mb-4" set:html={texto}/>
    <a href="https://www.google.com/maps/place/ESCUELA+DE+LA+CULTURA+(MOMENTANEA)/@-42.4810416,-73.7741798,117m/data=!3m1!1e3!4m6!3m5!1s0x962219f3898dd505:0xe6028d1abbd04b26!8m2!3d-42.4808861!4d-73.774538!16s%2Fg%2F11h04p0fbz?entry=ttu&g_ep=EgoyMDI1MDkxNy4wIKXMDSoASAFQAw%3D%3D" target="_blank" rel="noopener noreferrer" class="inline-block text-red-600 hover:text-red-700 font-medium">
        {enlace}
    </a>
</section>