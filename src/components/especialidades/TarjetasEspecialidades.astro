---
import { Icon } from 'astro-icon/components';
interface Props {
    icono: string;
    titulo: string;
    descripcion: string;
}
const { icono, titulo, descripcion } = Astro.props;
---
<section class="bg-white rounded-2xl p-8 shadow-lg cursor-pointer border-2 border-transparent hover:border-red-600 h-full">
    <div class="flex flex-col items-center h-full">
        <Icon name={icono} class="w-10 h-10 text-red-600 mb-4"/>
        <h3 class="text-xl font-bold text-center text-red-600 mb-4">
            {titulo}
        </h3>
        <p class="text-black text-center leading-relaxed mb-6">
            {descripcion}
        </p>
        <div class="text-center mt-auto w-full">
            <span class="inline-block bg-red-600 text-white px-4 py-2 rounded-full text-sm font-semibold">
                Conocer más →
            </span>
        </div>
    </div>
</section>