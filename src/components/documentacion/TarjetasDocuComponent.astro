---
interface Props {
    href: string;
    titulo: string;
}
const {href, titulo} = Astro.props;
---
<a href={href} target="_blank"
   class="group bg-white border-2 border-gray-200 rounded-xl p-6 hover:border-red-600 hover:shadow-xl transition-all duration-300 transform hover:scale-105">
    <div class="flex items-start">
        <div class="flex-1">
            <h3 class="text-xl font-bold text-gray-900 group-hover:text-red-700 transition-colors">
                {titulo}
            </h3>
        </div>
    </div>
</a>