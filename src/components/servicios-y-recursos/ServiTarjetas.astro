---
import { Icon } from "astro-icon/components";
const { icono, titulo, descripcion, url, textoBoton } = Astro.props;
---

<section class="relative z-20 group cursor-pointer hover:shadow-xl">
    <div class="flex flex-col h-full p-6 rounded-xl border-2 border-gray-100 bg-white shadow-md hover:border-red-600">
        <div class="flex flex-col items-center text-center">
            <div class="mb-5 flex items-center justify-center w-14 h-14 rounded-lg bg-gradient-to-br from-red-600 to-red-500 text-white shadow-sm group-hover:scale-105 transition-transform">
                <Icon name={icono} class="w-7 h-7" />
            </div>
            <h3 class="text-lg font-semibold text-gray-800 mb-2 tracking-tight">{titulo}</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-4">{descripcion}</p>
            <a href={url} class="mt-auto inline-flex items-center gap-1 text-sm font-medium text-red-600 hover:text-red-700 transition-colors">
                {textoBoton}<span aria-hidden="true">â†’</span>
            </a>
        </div>
    </div>
</section>